{
    "name": "nrawe/wabi-orm",
    "description": "A minimalist, (near) zero-config object-relational mapper",
    "keywords": [
        "active-record",
        "fp",
        "functional",
        "functional-programming",
        "micro",
        "microphp",
        "minimalist",
        "orm"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nick Rawe",
            "email": "nrawe@reapit.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "eloquent/phony-kahlan": "^2.0",
        "kahlan/kahlan": "^4.5"
    },
    "autoload": {
        "files": [
            "library/connect.php",
            "library/connectors.php",
            "library/globals.php",
            "library/model.php",
            "library/orm.php",
            "library/q.php",
            "library/utilities.php"
        ]
    },
    "scripts": {
        "test": "kahlan",
        "test:coverage": "phpdbg -qrr vendor/bin/kahlan --coverage=4 --clover='coverage/clover.xml' --src='library'"
    }
}